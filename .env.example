# Cloudflare Configuration
# Get these values from `wrangler whoami` and Cloudflare Dashboard
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# Application Configuration
APP_NAME="Formation IA Agentique"
APP_VERSION="1.0.0"
ENVIRONMENT=development

# Database Configuration
# D1 Database ID from wrangler d1 create command
D1_DATABASE_ID=your_database_id_here

# R2 Storage Configuration
# R2 bucket name for image and asset storage
R2_BUCKET_NAME=training-ai-agentic-images

# CORS and Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173

# Development URLs
DEV_APP_URL=http://localhost:5173
DEV_WORKER_URL=http://localhost:8787

# Production URLs (update with actual domain when deployed)
PROD_APP_URL=https://training-ai-agentic.workers.dev
PROD_WORKER_URL=https://training-ai-agentic.workers.dev

# OAuth and Authentication (if using external providers)
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# AI Configuration (if using AI features)
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key

# Monitoring and Analytics (optional)
# SENTRY_DSN=your_sentry_dsn
# ANALYTICS_ID=your_analytics_id